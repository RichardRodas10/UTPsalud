<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fondo_fragment">


    <LinearLayout
        android:id="@+id/containerEditBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/fondo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iconInfo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_flecha_izquierda"
            app:tint="@color/button" />
        <EditText
            android:id="@+id/editBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/contenedor_fragmenthome"
            android:drawableTint="@color/letra_fragment"
            android:drawablePadding="10dp"
            android:hint="Buscar"
            android:gravity="top|start"
            android:inputType="textEmailAddress"
            android:maxLines="5"
            android:padding="12dp"
            android:textColor="@color/letra_fragment"
            android:textColorHint="@color/gray_suave"
            android:textSize="16dp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contenedorPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/containerEditBuscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Imagen de perfil -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fotoPerfil"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_account"
                android:scaleType="centerCrop" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Contenedor para los textos -->
        <LinearLayout
            android:id="@+id/textContainer"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/fotoPerfil"
            app:layout_constraintBottom_toBottomOf="@id/fotoPerfil"
            app:layout_constraintStart_toEndOf="@id/fotoPerfil"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Usuario"
                android:textColor="@color/letra_fragment"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textApe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellido del Usuario"
                android:textColor="@color/letra_fragment"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnInstrucciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/azul_marino"
                android:text="agregar"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/containerFecha" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>